    "@types/xmlhttprequest": "^1.8.2",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^9.5.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "nx": "19.6.0",
    "prettier": "^3.3.2",
    "tslib": "^2.6.3",
    "typedoc": "^0.26.2",
    "typescript": "^5.5.2"
  },
